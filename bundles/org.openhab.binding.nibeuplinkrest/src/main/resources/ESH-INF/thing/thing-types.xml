<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="nibeuplinkrest"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<bridge-type id="apibridge">
		<label>NibeUplink REST API Bridge</label>
		<description>Connection to the Nibe Uplink Rest API</description>

		<config-description>
			<parameter name="clientId" type="text" required="true">
				<label>Client Identifier</label>
				<description>OAuth Client Identifier obtained from Nibe Uplink</description>
			</parameter>
			<parameter name="clientSecret" type="text" required="true">
				<label>Client Secret</label>
				<description>OAuth Client Secret obtained from Nibe Uplink</description>
			</parameter>
			<parameter name="updateInterval" type="integer" min="30" max="3600" required="true">
				<label>Update interval</label>
				<description>Update interval</description>
				<default>60</default>
			</parameter>
			<parameter name="softwareUpdateCheckInterval" type="integer" min="0" max="365" required="true">
				<label>Update interval</label>
				<description>Update interval</description>
				<default>7</default>
			</parameter>
		</config-description>

	</bridge-type>

	<thing-type id="system">
		<supported-bridge-type-refs>
			<bridge-type-ref id="apibridge"/>
		</supported-bridge-type-refs>
		<label>System</label>
		<channel-groups>
			<channel-group id="control" typeId="control" />
		</channel-groups>
		<properties>
			<property name="name" />
			<property name="productName" />
			<property name="securityLevel" />
			<property name="serialNumber" />
			<property name="hasCooling" />
			<property name="hasHeating" />
			<property name="hasHotWater" />
			<property name="hasVentilation" />
			<property name="softwareVersion" />
		</properties>

		<representation-property>systemId</representation-property>

		<config-description>
			<parameter name="systemId" type="integer" required="true">
				<label>System Id</label>
				<description>The system Id given by Nibe Uplink</description>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="thermostat">
		<supported-bridge-type-refs>
			<bridge-type-ref id="apibridge"/>
		</supported-bridge-type-refs>
		<label>Thermostat</label>
		<description>A virtual thermostat connected to your Nibe system</description>
		<channels>
			<channel id="currentTemperature" typeId="currentTemperature">
				<label>Current temperature</label>
			</channel>
			<channel id="targetTemperature" typeId="targetTemperature">
				<label>Target temperature</label>
			</channel>
		</channels>
		<representation-property>id</representation-property>
		<config-description>
			<parameter name="id" type="integer" required="true">
				<label>Id</label>
				<description>Identifier for the thermostat</description>
			</parameter>
			<parameter name="systemId" type="integer" required="true">
				<label>System Id</label>
				<description>Id of the Nibe Uplink system this thermostat belongs to.</description>
			</parameter>
			<parameter name="name" type="text" required="true">
				<label>Thermostat name</label>
				<description>A short descriptive name of the thermostat (e.g. "Ground Floor" or "Bedroom")</description>
			</parameter>
			<parameter name="climateSystems" type="text">
				<label>ClimateSystems</label>
				<description>A comma-separated list of the heating systems this thermostat controls</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="currentTemperature">
		<item-type>Number</item-type>
		<label>Current temperature</label>
		<description>The current indoor temperature. This needs to be supplied by a separate sensor, but you can use the
			follow-profile to automatically update the Item connected to this channel. When a command is sent to this
			channel the value is immediately sent to Nibe Uplink.</description>
		<category>Temperature</category>
	</channel-type>
	<channel-type id="targetTemperature">
		<item-type>Number</item-type>
		<label>Target temperature</label>
		<description>The target temperature for the climate system. When a command is sent to this
			channel the value is immediately sent to Nibe Uplink.</description>
		<category>Heating</category>
	</channel-type>
	<channel-type id="mode">
		<item-type>String</item-type>
		<label>Mode</label>
		<command>
			<options>
				<option value="DEFAULT_OPERATION">Normal</option>
				<option value="AWAY_FROM_HOME">Away mode</option>
				<option value="VACATION">Vacation mode</option>
			</options>
		</command>
	</channel-type>
	<channel-type id="hotWaterBoost">
		<item-type>Number</item-type>
		<label>Hot water boost</label>
		<command>
			<options>
				<option value="0">Off</option>
				<option value="1">3h</option>
				<option value="2">6h</option>
				<option value="3">12h</option>
				<option value="4">One time</option>
			</options>
		</command>
	</channel-type>
	<channel-type id="ventilationBoost">
		<item-type>Number</item-type>
		<label>Ventilation boost</label>
		<command>
			<options>
				<option value="0">Normal</option>
				<option value="1">Speed 1</option>
				<option value="2">Speed 2</option>
				<option value="3">Speed 3</option>
				<option value="4">Speed 4</option>
			</options>
		</command>
	</channel-type>
	<channel-type id="parallelAdjustmentHeating">
		<item-type>Number</item-type>
		<label>Parallel adjustment when heating</label>
		<state min="-10" max="10" step="1" />
	</channel-type>
	<channel-type id="parallelAdjustmentCooling">
		<item-type>Number</item-type>
		<label>Parallel adjustment when cooling</label>
		<state min="-10" max="10" step="1" />
	</channel-type>
	<channel-type id="targetTemperatureHeating">
		<item-type>Number</item-type>
		<label>Target temperature when heating</label>
		<state min="5" max="30" step="0.5" />
	</channel-type>
	<channel-type id="targetTemperatureCooling">
		<item-type>Number</item-type>
		<label>Target temperature when cooling</label>
		<state min="5" max="35" step="0.5" />
	</channel-type>

	<channel-group-type id="status">
		<label>Status</label>
		<description>General status channels</description>
	</channel-group-type>
	<channel-group-type id="control">
		<label>Control</label>
		<description>Channels to control the operation of the system</description>
		<channels>
			<channel id="mode" typeId="mode" />
			<channel id="48132" typeId="hotWaterBoost" />
			<channel id="47260" typeId="ventilationBoost" />
		</channels>
	</channel-group-type>

</thing:thing-descriptions>
